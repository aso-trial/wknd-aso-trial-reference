<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        jcr:mixinTypes="[granite:InternalArea]"
        jcr:primaryType="nt:unstructured"
        jcr:title="AEM Sites Page Editor"
        sling:resourceType="cq/gui/components/authoring/editors/core"
        consoleId="cq-sites-editor-page"
        mainClientLib="cq.authoring.editor.sites.page"
        onboardingPath="/mnt/overlay/wcm/core/content/editor/onboarding.html"
        trackingFeature="Page Editor">
        <granite:data
            jcr:primaryType="nt:unstructured"
            extraClientlibs="[aem.mfe.sidekick]"/>
        <sidepanels jcr:primaryType="nt:unstructured">
            <edit
                granite:class="js-SidePanel-content js-SidePanel-content--edit"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        margin="{Boolean}true"
                        maximized="{Boolean}true"
                        orientation="vertical"
                        size="L">
                        <items jcr:primaryType="nt:unstructured">
                            <experimentTab
                                granite:class="sidepanel-tab sidepanel-tab-experiment editor-ComponentBrowser"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Experiments"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    headerTitle="Experiments"/>
                                <parentConfig
                                    jcr:primaryType="nt:unstructured"
                                    icon="beaker"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        granite:class="sidepanel-tab-title"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                        level="2"
                                        text="Experiment"/>
                                    <mfe
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/include"
                                        path="/apps/wcm/core/content/experimentation"/>
                                </items>
                            </experimentTab>
                        </items>
                    </tabs>
                </items>
            </edit>
        </sidepanels>
    </jcr:content>
</jcr:root>
